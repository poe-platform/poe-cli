{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@poe/shared-utils": [
        "../shared/conversation-layout"
      ],
      "@poe/shared-utils/*": [
        "../shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "tests",
    "vitest.config.ts",
    "vitest.config.mts"
  ]
}
