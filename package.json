{
  "name": "poe-setup",
  "version": "0.1.6",
  "description": "CLI tool to configure Poe API for various development tools.",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node scripts/copy-templates.mjs",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run test:root && npm run test --prefix vscode-extension",
    "test:root": "vitest run",
    "build:extension": "npm run compile --prefix vscode-extension",
    "lint": "npm run lint:eslint && npm run lint:types && npm run lint:workflows",
    "lint:workflows": "(command -v actionlint > /dev/null || bash scripts/setup-actionlint.sh) && (command -v actionlint > /dev/null && actionlint || ./actionlint)",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "watch": "tsx watch src/index.ts",
    "watch:extension": "npm run watch --prefix vscode-extension",
    "lint:eslint": "eslint . --ext ts",
    "lint:types": "tsc -p tsconfig.build.json --noEmit && npm run typecheck --prefix vscode-extension"
  },
  "bin": {
    "poe-setup": "dist/index.js",
    "poe-cli": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@iarna/toml": "^3.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "diff": "^5.2.0",
    "handlebars": "^4.7.8",
    "ink": "^6.4.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "prompts": "^2.4.2",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/node": "^20.12.7",
    "@types/prompts": "^2.4.9",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "memfs": "^4.7.3",
    "prettier": "^3.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.5.1",
    "yaml": "^2.6.0"
  }
}
